<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="icon" type="image/x-icon" href="{{ asset('logo.jpg') }}" />

        <title>Panel Admin {% block title %}{% endblock %}</title>
        <!--<link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">-->
        <link href="{{ asset('css/paper.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/app.css') }}" rel="stylesheet">
        <link href="{{ asset('css/chosen.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/sweetalert.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jquery-ui.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jquery-ui.structure.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jquery-ui.theme.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jquery.tagsinput.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jquery.datetimepicker.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/googlefont.css') }}" rel="stylesheet">
        <link href="{{ asset('css/bootstrap-material-datetimepicker.css') }}" rel="stylesheet">
        {% block stylesheets %}
        {% endblock %}
    </head>

    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('jiwon_homepage') }}"><img src="{{ asset('img/logo.jpg') }}"></a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="{{ path('jiwon_usermanager_homepage')}}"><i class="fa fa-user"></i> User</a>
                            </li>
                        {% elseif is_granted('ROLE_USER')%}
                            <li>
                                <a href="{{ path('fos_user_change_password')}}"><i class="fa fa-user"></i> Mot de passe</a>
                            </li>
                        {% endif %}
                            <li>
                                <a href="{{ path('jiwon_cccp_audit') }}"><i class="fa fa-play"></i> Lancer un audit</a>
                            </li>
                            <li>
                                <a href="{{ path('jiwon_cccp_homepage') }}"><i class="fa fa-search"></i> RÃ©sultat</a>
                            </li>
                            <li>
                                <a href="{{ path('jiwon_cccp_template') }}"><i class="fa fa-file-text-o"></i> Template</a>
                            </li>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <li>
                                <a href="{{ path('jiwon_log')}}"><i class="fa fa-archive"></i> Log</a>
                            </li>
                        {% endif %}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user %}
                            {% if not is_granted('ROLE_USER') %}
                                <li><a href="{{ path('fos_user_registration_register') }}"><i class="fa fa-plus"></i> Enregistrer</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <li><a href="{{ path('jiwon_option') }}"><i class="fa fa-cog"></i> Options</a></li>
                            {% endif %}
                            <li><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out"></i> Logout</a></li>
                        {% else %}
                            <li><a href="{{ path('fos_user_registration_register') }}"><i class="fa fa-plus"></i> S'enregistrer</a></li>
                            <li class="navbar-right"><a href="{{ path('fos_user_security_login') }}"><i class="fa fa-sign-in"></i> Connexion</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container" style="margin-top:100px;">
            <div class="row">
                {% block body %}
                {% endblock %}
            </div>
        </div>

        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/jquery-ui.js') }}"></script> 
        <script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-jqueryui.js') }}"></script>
        <script src="{{ asset('js/search.js') }}"></script>
        <script src="{{ asset('js/paging.js') }}"></script>
        <script src="{{ asset('js/config_paging.js') }}"></script>
        <script src="{{ asset('js/chosen.jquery.min.js') }}"></script>
        <script src="{{ asset('js/sweetalert.min.js') }}"></script>
        <script src="{{ asset('js/jquery.tagsinput.min.js') }}"></script> 
        <script src="{{ asset('js/jquery.tablesorter.js') }}"></script>
        <script src="{{ asset('js/jquery.datetimepicker.full.min.js') }}"></script>
        <script src="{{ asset('js/moment-with-locales.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap-material-datetimepicker.js') }}"></script>
        {% block javascripts %}
        {% endblock javascripts %}
    </body>
</html>