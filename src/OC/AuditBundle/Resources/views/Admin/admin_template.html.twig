            </thead>
            <tbody>
                {% for template in templates %}
                    <tr>
                        <td>{{ template.nom }}</td>
                        <td>{{ template.idassociation }}</td>
                        <td>{{ template.idconstructeur }}</td>
                        <td>{{ template.idmodele }}</td>
