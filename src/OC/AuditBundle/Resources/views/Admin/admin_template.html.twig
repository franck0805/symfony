{% extends "::base.bis.html.twig" %}

{% block title %}- Administration des templates{% endblock %}

{% block body %}
    <div class="col-md-12">
        <div style="text-align:center">
            <h4>Administration des templates</h4><br>
        </div>
        <table class="table">
            <thead>
                <tr class="active">
                    <th>Nom</th>
                    <th>Reseau / Type NE</th>
                    <th>Constructeur</th>
                    <th>Mod√®le</th>
                    <th>Version</th>
                    <th>Type</th>
                    <th></th>
